<% @filters.each do |filter| %>
  <tr>
    <td><%= filter.name %></td>
    <td><%= Subscription.find(filter.subscription_id).title %></td>
    <td><%= link_to 'Show', filter %></td>
    <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
    <td><%= link_to 'Delete', filter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
